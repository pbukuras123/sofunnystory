

<h1 class="text-center mt-4">Funny Stories</h1>
<div class="container">
  <% @stories.each do |story| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow-sm mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= story.user.username %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to story.title, story_path(story), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(story.story, length: 100) %></p>
            <%= link_to "View", story_path(story), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_story_path(story), class: "btn btn-outline-info" %>
            <a href="#" class="btn btn-outline-danger">Delete</a>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(story.created_at) %> ago,
            edited <%= time_ago_in_words(story.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Story', new_story_path %>
